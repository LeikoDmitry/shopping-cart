{# Страница показа заказа по хеш #}

{% extends '@layout/default.html.twig' %}

{% block title %}Заказ{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h3>Заказ # {{ order.id }}</h3>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <h3>Адрес отправки</h3>
                    <p>{{ order.address1 }}</p>
                    <p>{{ order.address2 }}</p>
                    <p>{{ order.city }}</p>
                    <p>{{ order.postal_code }}</p>
                </div>
                <div class="col-md-6">
                    <h3>Информация по заказу</h3>
                    {% for product in order.product %}
                        <p>Название: {{ product.title }}</p>
                        <p>Количество: {{ product.quantity }}</p>
                        <p><a href="{{ path('product', {'slug': product.slug}) }}">{{ product.title }}</a></p>
                        <hr />
                    {% endfor %}
                </div>
                <hr/>
            </div>
            <h3>Всего:  {{ order.total }}</h3>
        </div>
    </div>
{% endblock %}
